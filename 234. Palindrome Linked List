
var isPalindrome = function(head) {
    if(!head)return head;
        let fast = head;
        let slow = head;
    while(fast.next && fast.next.next){

        fast = fast.next.next;
    }
    let mid = reverse(slow);
    
    while(head && mid){
        if(head.val !== mid.val){
            return false;
        }
        head = head.next;
        mid = mid.next;
    }
    return true;  
};

var reverse = function(curr){
    var prev =null;
    while(curr) {
        var next = curr.next;
        curr.next = prev;
        prev = curr;
        curr = next; 
    }
    return prev; 
}
